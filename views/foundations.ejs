<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Foundations</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background: url('give.png') no-repeat center center fixed;
      background-size: cover;
      color: #fff;
    }
    
    h1 {
      text-align: center;
      margin-top: 20px;
    }

    table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
      background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white */
      color: #333;
      border-radius: 10px;
      overflow: hidden;
    }

    th, td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: center;
    }

    th {
      background-color: #f2f2f2;
    }

    table tr:last-child td {
      border-bottom: none;
    }
  </style>
</head>
<body>
  <h1>Verified Foundations</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% if (foundations.length > 0) { %>
        <% foundations.forEach(foundation => { %>
          <tr>
            <td><%= foundation.name %></td>
            <td><%= foundation.address %></td>
            <td><%= foundation.phone %></td>
            <td><%= foundation.email %></td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="5">No foundation data available!</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>