<!-- views/thank-you.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thank You</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: url('give.png') no-repeat center center fixed;
      background-size: cover;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    .container {
      text-align: center;
      background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white background */
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 500px;
      width: 100%;
    }

    h1 {
      color: #4B6F44;
      font-size: 2.5em;
    }

    p {
      font-size: 1.2em;
      color: #555;
      margin-top: 20px;
    }

    .btn {
      margin-top: 20px;
      padding: 15px;
      background-color: #4B6F44;
      color: #fff;
      font-size: 20px;
      font-weight: bold;
      border: none;
      border-radius: 100px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .btn:hover {
      background-color: #355E3B;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Thanks for giving!</h1>
    <p>We appreciate your support in helping those in need.</p>
    <button class="btn" onclick="window.location.href='http://localhost:5500/dashboard'">Done</button>
  </div>
</body>
</html>
