<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Leaderboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background: url('nav.png') no-repeat center center fixed;
      background-size: cover;
      color: #fff;
    }

    h1 {
      text-align: center;
      margin-top: 40px;
      color: #FFD700;
      font-size: 36px;
    }

    .leaderboard-container {
      width: 90%;
      max-width: 1000px;
      margin: 30px auto;
      padding: 20px;
      background-color: rgba(0, 0, 0, 0.5);
      border-radius: 10px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    th, td {
      padding: 12px;
      text-align: center;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      color: #fff;
    }

    th {
      background-color: rgba(255, 215, 0, 0.1);
      color: #FFD700;
    }

    tr:nth-child(even) {
      background-color: rgba(255, 255, 255, 0.05);
    }

    .no-data {
      text-align: center;
      padding: 20px;
      font-size: 18px;
      color: #FFD700;
    }
  </style>
</head>
<body>
  <div class="leaderboard-container">
    <h1>Top Givers</h1>
    <table>
      <thead>
        <tr>
          <th>Rank</th>
          <th>Name</th>
          <th>Phone</th>
          <th>Meals Given</th>
        </tr>
      </thead>
      <tbody>
        <% if (members.length > 0) { %>
          <% members.forEach((member, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= member.name %></td>
              <td><%= member.phone %></td>
              <td><%= member.total_amount || 0 %></td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="4" class="no-data">No members data available!</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
